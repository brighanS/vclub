<!DOCTYPE html>
<html>
  <head>
    <title>Vclub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div  class="">
      <div id="modal_window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">

          </div>
        </div>
      </div>
    </div>
    <p class="notice alert-primary"><%= notice %></p>
    <nav class="nav navbar-expand-lg navbar-light bg-light navbar-dark bg-dark">
      <a class="navbar-brand">
        <% if user_signed_in? %>
        <div class="row">
          <div class="col">
            <span class="col-8" style='color:#FFFFFF'>Welcome: </span> <span style='color:#FECEAB '><%= current_user.email %></span>
            <span><a style='color:#F8B' href="/index">HOME</a></span>
            <span class="col-8" style='color:#FFFFFF'><%= link_to 'Log Out', destroy_user_session_path, method: :delete ,style: 'color:#FFFFFF;'%></span>
          </div>
          <div class="col">
            <% else %>
            <a class="nav-link active"> <%= link_to 'Log In', new_user_session_path,style: 'color:#FFFFFF;' %></a>
            <a class="nav-link active"> <%= link_to 'Sign Up!', new_user_registration_path, style: 'color:#FFFFFF;' %></a>
            <% end %>
          </div>

        </div>
      </a>
    </nav>
    <!-- <p class="alert"><%= alert %></p> -->
    <%= yield %>
  </body>
</html>
