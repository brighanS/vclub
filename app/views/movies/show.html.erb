<div class="container">
  <div class="row">
    <div class="col-xm mx-auto">
      <div class="row">
        <div class="col">
        </div>
      </div>
      <div class="row">
        <div class="col">
          <br>
          <table class="table table-bordered">
            <tr>
              <td><strong>Name:</strong></td>
              <td><%= @movie.name %></td>
            </tr>
            <tr>
              <td><strong>Genre:</strong></td>
              <td><%= @movie.genre %></td>
            </tr>
            <tr>
              <td><strong>Image url:</strong></td>
              <td><a href="<%= @movie.image_url %>">Click to open</a></td>
            </tr>
