<h1 class="display-1">Movies</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <!-- <th scope="col">Genre</th> -->
      <th scope="col">Image url</th>
      <th scope="col">Price</th>
      <!-- <th scope="col">Duration</th> -->
      <th scope="col-3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr scope="row">
        <td><%= movie.name %></td>
        <!-- <td><%= movie.genre %></td> -->
        <td><img src="<%= movie.image_url %>" class="img-fluid align-center" alt="Responsive image"> </td>
        <td><%= number_to_currency(movie.price) %></td>
        <!-- <td><%= movie.duration %></td> -->
        <td class="align-middle">
          <%= link_to 'Details', movie , {:class => "btn btn-info"}%>
          <%= link_to 'Edit', edit_movie_path(movie),{:class => "btn btn-secondary"} %>
          <%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="container">
  <div class="row">
    <div class="col-6 col-1 ">
      <%= link_to 'New Movie', new_movie_path , {:class => "btn btn-primary"}%>
    </div>
    <div class="col-6 col-1 ">
      <%= link_to 'Rent a Movie', {:controller => "movies", :action => "make_a_rent"},{:class => "btn btn-primary"} %>
    </div>
    </div>
  </div>
</div>
