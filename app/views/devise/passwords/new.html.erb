<div class="container">
  <div class="row">
    <div class="col-xm mx-auto">
      <div class="row">
        <div class="col">
          <h2>Forgot your password?</h2>
        </div>
      </div>

      <div class="row">
        <div id="forgot_password" class="col">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Send me reset password instructions", class:"btn btn-outline-primary btn-large" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
